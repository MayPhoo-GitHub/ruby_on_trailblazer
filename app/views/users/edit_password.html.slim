.pt-5
    h1.text-center Change Password
    .row
        .card.col-md-5.mx-auto
            .card-body
                = form_with model: @form, url: edit_password_users_path, method: :put do |f|
                    .form-group
                        = f.label :password, class: "required"
                        = f.password_field :password, class: "form-control"
                        - if @form.errors[:password].any?
                            .error-msg This  #{ @form.errors[:password][0] }

                    .form-group
                        = f.label :password_confirmation, "Confirm Password", class: "required"
                        = f.password_field :password_confirmation, class: "form-control"
                        - if @form.errors[:password_confirmation].any?
                            .error-msg This  #{ @form.errors[:password_confirmation][0] }

                    = f.submit class: "btn btn-dark btn-block"
                
