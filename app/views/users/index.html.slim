.table-container
    table#users
        thead
            tr
                th ID
                th Name
                th Email
                th Phone No
                th Address
                th Birthday
                th User Type
                th Action
        tbody
            - @model.each do |user|
              tr
                td == user.id
                td == user.name
                td == user.email
                td == user.phone
                td == user.address
                td == user.birthday
                td == user.super_user_flag == true ? "Super User" : "Normal User"
                td == link_to "View", user_path(user)
    - if current_user.super_user_flag == true
            == link_to "Add User", new_user_users_path, class: "btn-submit"

= javascript_pack_tag 'user'