.pt-5
    h1.text-center Log In
    .row
        .card.col-md-5.mx-auto
            .card-body
                = form_with model: @form , url: login_path, method: :post do |f|
                    .form-group
                        = f.label :email, class: "required"
                        = f.email_field :email, class: 'form-control'
                        - if @form.errors[:email].any?
                            .error-msg This  #{ @form.errors[:email][0] }
                    .form-group
                        = f.label :password, class: "required"
                        = f.password_field :password, class: 'form-control'
                        - if @form.errors[:password].any?
                            .error-msg This  #{ @form.errors[:password][0] }
                        br
                        = link_to 'Forgot password?', reset_password_path
                    .form-group.pt-1
                        = f.submit "Log In", class: "btn btn-dark btn-block" 
